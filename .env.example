
# Server Configuration
NODE_ENV=development
PORT=3001
CORS_ORIGIN=http://localhost:3000

# Database
MONGODB_URI=mongodb://localhost:27017/flowsprint

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=30d
NEXTAUTH_SECRET=your-nextauth-secret-key

# Logging
LOG_LEVEL=info


# Get your key: https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-v1-YOUR-ACTUAL-OPENROUTER-KEY-HERE
YOUR_SITE_URL=http://localhost:3000

# Get access: https://docs.cerebras.net/
CEREBRAS_API_KEY=csk-YOUR-ACTUAL-CEREBRAS-KEY-HERE

# Get token: https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=hf_YOUR-ACTUAL-HUGGING-FACE-TOKEN-HERE


# Enable Docker MCP Gateway
MCP_ENABLED=true

# Service Discovery (Consul)
CONSUL_HOST=localhost
CONSUL_PORT=8500

# Docker Configuration
MCP_GATEWAY_URL=http://localhost:3002
DOCKER_SOCKET_PATH=/var/run/docker.sock
DOCKER_HOST=unix:///var/run/docker.sock

